<?xml version="1.0" encoding="utf-8"?>
<!--Card View widget-->
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_h"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    card_view:contentPadding="3dp"
    card_view:cardBackgroundColor="#EDFAFF"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item_h"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:background="@drawable/white_layout_background"
            android:elevation="2dp"
            android:src="@drawable/pythonbook"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_item_h"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|left"
            android:background="@drawable/semi_circle_left_background"
            android:paddingLeft="10dp"
            android:text="Book"
            android:elevation="2dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/guidline"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/img_item_h" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/txt_price_item_h"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|right"
            android:layout_marginBottom="5dp"
            android:background="@drawable/semi_circle_right_background"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:text="150 RS"
            android:elevation="2dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/guidline"
            card_view:layout_constraintTop_toBottomOf="@+id/img_item_h" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
